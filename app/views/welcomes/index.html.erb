<% if (user_signed_in?) && (current_user.has_role? :seller)%>
  <strong> Logged in as <%= current_user.email%> </strong>
   <%= image_tag(current_user.avatar_thumbnail)%>
  <p>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  </p>

  <p>
    <%=link_to "Edit Account", edit_user_registration_path %>
  </p>

  <p>
    <%=link_to "Create Product", new_user_product_path(current_user.id) %>
  </p>

<% else %>
  <p>
    <%=link_to "Create an Account", new_user_registration_path %>
  </p>

  <p>
    <%= link_to "login", new_user_session_path %>
  </p>
    <p>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  </p>

<% end %>
